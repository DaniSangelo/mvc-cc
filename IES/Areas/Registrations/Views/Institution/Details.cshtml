@model Model.Registrations.Institution

@{
    ViewData["Title"] = "Institution";
    Layout = "_Layout";
}

<div class="container">
    <hr />
    <div class="row">
        <div class="col-sm-6">
            <div>
                @{await Html.RenderPartialAsync("~/Areas/Registrations/Views/Institution/_PartialContentInstitution.cshtml", Model); }
            </div>
        </div>
        <div class="col-sm-6">
            @{await Html.RenderPartialAsync("~/Areas/Registrations/Views/Institution/_WithDepartments.cshtml", Model.Departments.ToList()); }
        </div>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.InstitutionId">Edit</a>
    <a class="btn btn-default" role="button" asp-action="Index">Back to List</a>
</div>