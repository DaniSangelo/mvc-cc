@model IES.Models.Institution
@{
    Layout = "_LayoutIES";
}

@section Styles {
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/font-awesome.min.css"
              asp-fallback-href="~/lib/font-awesome/css/all.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
    </environment>
}

<div class="card-block">
    <div class="card-header text-white bg-secondary text-center h1">Displaying an existing institution</div>
    <div class="card-body">
        <div class="row">
            <div class="col-8">
                <div class="form-group">
                    <label asp-for="InstitutionId" class="control-label"></label>
                    <br />
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="fa fa-key" aria-hidden="true"></i>
                            </span>
                        </div>
                        <input asp-for="InstitutionId" class="form-control" disabled="disabled" />
                    </div>
                    <label asp-for="Name" class="control-label"></label>
                    <br />
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="fa fa-user-circle" aria-hidden="true"></i>
                            </span>
                        </div>
                        <input asp-for="Name" class="form-control" disabled="disabled" />
                    </div>
                    <label asp-for="Address" class="control-label"></label>
                    <br />
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="fa fa-map-marker-alt" aria-hidden="true"></i>
                            </span>
                        </div>
                        <input asp-for="Address" class="form-control" disabled="disabled" />
                    </div>
                </div>
            </div>
            <div class="col-4">
                @{await Html.RenderPartialAsync("~/Views/Institution/_WithDepartments.cshtml", Model.Departments.ToList()); }
            </div>
        </div>
    </div>
    <div class="card-footer bg-info text-center text-white">
        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model.InstitutionId">Edit</a> |
        <a asp-action="Index" class="btn btn-warning">Back to institutions list</a>
    </div>
</div>