@model IEnumerable<Model.Registrations.Department>

<div class="panel panel-info">
    <div class="panel-heading">Departments</div>
    <div class="panel-body">
        <div class="list-group" style="width: 18rem;">

            @foreach (var item in Model)
            {
                <a asp-controller="Department" asp-action="Details" asp-route-id="@item.DepartmentId" class="list-group-item list-group-item-action">@Html.DisplayFor(modelItem => item.Name)</a>
            }

        </div>
    </div>
</div>